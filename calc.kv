<Button>
    size_hint: (.2, .2)
    background_normal: ''
    background_color: (92/255, 89/255, 89/255)
    font_size: 32

<CalculatorWidget>
    BoxLayout
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: input
            text: '0'
            font_size: .6 * self.height
            multiline: False
            halign: 'right'
            size_hint: (1, .2)
            background_color: (92/255, 89/255, 89/255, .5)
            foreground_color: (1, 1, 1)

        GridLayout:
            cols: 4
            rows: 5

            ## Row 1 ##
            Button:
                text: '%'
                on_press: root.sign_value('%')

            Button:
                text: 'C'
                on_press: root.clear()

            Button:
                text: u'\u00AB'
                on_press: root.backspace()

            Button:
                text: u'\u00F7'
                background_color: (224/255, 145/255, 25/255)
                on_press: root.sign_value('/')

            ## Row 2 ##
            Button:
                text: '7'
                on_press: root.btn_value(7)

            Button:
                text: '8'
                on_press: root.btn_value(8)

            Button:
                text: '9'
                on_press: root.btn_value(9)

            Button:
                text: u'\u00D7'
                background_color: (224/255, 145/255, 25/255)
                on_press: root.sign_value('*')

            ## Row 3 ##
            Button:
                text: '4'
                on_press: root.btn_value(4)

            Button:
                text: '5'
                on_press: root.btn_value(5)

            Button:
                text: '6'
                on_press: root.btn_value(6)

            Button:
                text: u'\u002D'
                background_color: (224/255, 145/255, 25/255)
                on_press: root.sign_value('-')

            ## Row 4 ##
            Button:
                text: '1'
                on_press: root.btn_value(1)

            Button:
                text: '2'
                on_press: root.btn_value(2)

            Button:
                text: '3'
                on_press: root.btn_value(3)

            Button:
                text: u'\u002B'
                background_color: (224/255, 145/255, 25/255)
                on_press: root.sign_value('+')

            ## Row 5 ##
            Button:
                text: u'\u00B1'
                on_press: root.pos_neg()

            Button:
                text: '0'
                on_press: root.btn_value(0)

            Button:
                text: '.'
                on_press: root.dot()

            Button:
                text: u'\u003D'
                background_color: (224/255, 145/255, 25/255)
                on_press: root.equals()
